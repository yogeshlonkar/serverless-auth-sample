{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "${relativeFile}",
                "--no-cache"
            ],
            "env": {
                "NODE_ENV": "test",
                "NODE_PATH": "${workspaceRoot}",
                "IS_OFFLINE": "true"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart"
        }
    ]
}